<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] Самый лучший магазин игр!!</title>
    <link rel="stylesheet" href="~/css/index.css"/>

</head>
<body>
<header>
      
    <nav>
        <ul class="menu">
            <li class="store-icon">
                
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="store-icon"></div>
                </a>
            </li>
            
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Магазин</a></li>
            <li><a href="#search">Поиск</a></li>
        </ul>
        <div class="rightNav">
            <div class="rightNav__item sign-in"><a asp-area="" asp-controller="Login" asp-action="Login">Bход</a></div>
            <div class="rightNav__item download"><a href="#download">Установить приложение</a></div>
        </div>
    </nav>
      
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>