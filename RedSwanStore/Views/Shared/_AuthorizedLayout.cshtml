<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Red Swan Store</title>
    <link rel="stylesheet" href="~/css/index.css"/>

</head>
<body>
<header>
      
    <nav>
        <ul class="menu">
            <li class="store-icon">
                
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="store-icon"></div>
                </a>
            </li>
            
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Магазин</a></li>
            <li><a href="#search">Поиск</a></li>
            
            <li> <a asp-area="" asp-controller="Library" asp-action="Library"> Костыль #1 </a> </li>
            
            <li> <a asp-area="" asp-controller="" asp-action=""> Костыль #2 </a> </li>
        </ul>
        <div class="rightNav">
            <div class="rightNav__item sign-in dropdown">
                
                
                <span class="dropdown_button__toggleLabel">
                    <a class="header-user-info" href="/profile/user?@ViewData["userUrl"]">
                        <img class="header-user-info__photo" src="@ViewData["userPhoto"]" alt="photo" width="45" height="45">
                        <span class="header-user-info__login">@ViewData["userLogin"]</span>
                    </a>
                </span>

                <div class="dropdown__submenu submenu">
                    
                    <button class="submenu__button">
                        <a href="library/user?@ViewData["userUrl"]"> 
                            <span> Библиотека </span>
                        </a>
                    </button>

                    <button class="submenu__button ">
                        <span> <a asp-controller="Login" asp-action="Logout">Выйти</a> </span>
                    </button>

                </div>

            </div>
            
            <div class="rightNav__item download"><a href="#download">Установить приложение</a></div>
        </div>
    </nav>
      
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>